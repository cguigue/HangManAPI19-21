<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="a02.cguigue.heritage.cguigue_b51_a02_hangman.HangmanFragment"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="#63955d">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ivHangman"
            android:contentDescription="@string/strHangImgDesc"
            android:layout_gravity="center"
            android:layout_weight=".15" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/strGoodLuck"
            android:id="@+id/tvUserName"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:textSize="20sp" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tvWord"
        android:layout_weight="1"
        android:textSize="70sp"
        android:textStyle="bold"
        android:gravity="center" />
</LinearLayout>
