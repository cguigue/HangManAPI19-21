<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="a02.cguigue.heritage.cguigue_b51_a02_hangman.OptionsActivity"
    android:background="#63955d">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/strOptions"
        android:id="@+id/tvOptionsTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="50sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strUsername"
        android:id="@+id/tvUser"
        android:layout_marginTop="45dp"
        android:textSize="35sp"
        android:layout_marginStart="56dp"
        android:layout_below="@+id/tvOptionsTitle"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etUser"
        android:textSize="30sp"
        android:layout_below="@+id/spnUsers"
        android:layout_alignStart="@+id/tvUser" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strBtnCommit"
        android:id="@+id/btnCommit"
        android:layout_alignTop="@+id/etUser"
        android:layout_toEndOf="@+id/etUser" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spnUsers"
        android:layout_alignTop="@+id/tvUser"
        android:layout_toEndOf="@+id/tvUser"
        android:spinnerMode="dropdown" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strMinLength"
        android:id="@+id/tvMin"
        android:textSize="35sp"
        android:layout_below="@+id/etUser"
        android:layout_toStartOf="@+id/spnUsers" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spnMin"
        android:layout_alignTop="@+id/tvMin"
        android:layout_toEndOf="@+id/tvMin"
        android:spinnerMode="dropdown" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strMaxLength"
        android:id="@+id/tvMax"
        android:textSize="35sp"
        android:layout_below="@+id/spnMin"
        android:layout_toStartOf="@+id/spnMin" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spnMax"
        android:layout_below="@+id/spnMin"
        android:layout_alignStart="@+id/spnMin"
        android:spinnerMode="dropdown" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/strSave"
        android:id="@+id/btnSave"
        android:textSize="35sp"
        android:layout_below="@+id/spnDifficulty"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strDifficulty"
        android:id="@+id/tvDifficulty"
        android:textSize="35sp"
        android:layout_below="@+id/spnMax"
        android:layout_toStartOf="@+id/spnMax" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spnDifficulty"
        android:layout_below="@+id/spnMax"
        android:layout_toEndOf="@+id/tvDifficulty"
        android:spinnerMode="dropdown" />

</RelativeLayout>
