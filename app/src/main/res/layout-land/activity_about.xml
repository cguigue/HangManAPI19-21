<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="a02.cguigue.heritage.cguigue_b51_a02_hangman.AboutActivity"
    android:background="#00f8ff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strAboutTitle"
        android:id="@+id/tvAbout"
        android:textSize="80sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game"
        android:id="@+id/tvGameTitle"
        android:layout_marginTop="6dp"
        android:textSize="30sp"
        android:layout_below="@+id/tvAbout"
        android:layout_toStartOf="@+id/tvAbout"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvGameValue"
        android:text="@string/app_name"
        android:textSize="30sp"
        android:layout_alignTop="@+id/tvGameTitle"
        android:layout_toEndOf="@+id/tvGameTitle"
        android:layout_marginStart="67dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/version"
        android:id="@+id/tvVersionTitle"
        android:layout_below="@+id/tvGameTitle"
        android:layout_alignEnd="@+id/tvGameTitle"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strVersion"
        android:id="@+id/tvVersionValue"
        android:textSize="30sp"
        android:layout_alignTop="@+id/tvVersionTitle"
        android:layout_alignStart="@+id/tvGameValue"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strAuthorTitle"
        android:id="@+id/tvAuthorTitle"
        android:layout_below="@+id/tvVersionTitle"
        android:layout_alignEnd="@+id/tvVersionTitle"
        android:textStyle="bold"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strAuthor"
        android:id="@+id/tvAuthorValue"
        android:layout_below="@+id/tvVersionValue"
        android:layout_alignStart="@+id/tvVersionValue"
        android:textStyle="bold"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strCompleteTitle"
        android:id="@+id/tvCompleted"
        android:layout_below="@+id/tvAuthorTitle"
        android:layout_alignEnd="@+id/tvAuthorTitle"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strCompleted"
        android:id="@+id/tvDateCompleted"
        android:layout_below="@+id/tvAuthorValue"
        android:layout_alignStart="@+id/tvAuthorValue"
        android:textStyle="bold"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strCourseTitle"
        android:id="@+id/tvCourse"
        android:layout_below="@+id/tvCompleted"
        android:layout_alignEnd="@+id/tvCompleted"
        android:textStyle="bold"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strCourse"
        android:id="@+id/tvProgV"
        android:layout_below="@+id/tvDateCompleted"
        android:layout_alignStart="@+id/tvDateCompleted"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strCourNumTitle"
        android:id="@+id/tvCourseNum"
        android:layout_below="@+id/tvCourse"
        android:layout_alignEnd="@+id/tvCourse"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strCourseNum"
        android:id="@+id/tvB51"
        android:layout_below="@+id/tvProgV"
        android:layout_alignStart="@+id/tvProgV"
        android:textStyle="bold"
        android:textSize="30sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/strGameDescription"
        android:id="@+id/tvDescription"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_below="@+id/tvCourseNum"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCurTime"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCurDate"
        android:layout_below="@+id/tvCurTime"
        android:layout_alignParentStart="true"
        android:textSize="30sp"
        android:textStyle="bold" />


</RelativeLayout>
